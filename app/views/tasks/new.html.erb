<h1>New task</h1>

<%= error_messages_for :task %>

<% form_for([ @project, @task ]) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Start date</b><br />
    <%= day_year_date_select(f, :start_date )%>
  </p>

  <p>
    <b>End date</b><br />
    <%= day_year_date_select(f, :end_date )%>
  </p>

  <p>
    <b>Budget</b><br />
    <%= f.text_field :budget %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', project_path(@project) %>