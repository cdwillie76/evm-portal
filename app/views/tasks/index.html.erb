<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Budget</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.start_date %></td>
    <td><%=h task.end_date %></td>
    <td><%=h task.budget %></td>
    <td><%= link_to 'Show', project_task_path(task.project, task) %></td>
    <td><%= link_to 'Edit', edit_project_task_path(task.project, task) %></td>
    <td><%= link_to 'Destroy', project_task_path(task.project, task), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_project_task_path %>